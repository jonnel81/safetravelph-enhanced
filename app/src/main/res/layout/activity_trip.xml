<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".Trip">

        <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:id="@+id/drawer_layout">

            <include
                layout="@layout/content_trip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:itemTextColor="@color/blue"
                android:fitsSystemWindows="false"
                app:menu="@menu/navigation_menu"
                app:headerLayout="@layout/navigation_header" />
        </androidx.drawerlayout.widget.DrawerLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical|end|end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_directions_24"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_notifications_black_24dp"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/ic_baseline_tag_faces_24"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical|end|end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripFeeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/ic_baseline_message_24"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

            <TextView
                android:id="@+id/txtFeedsCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-75dp"
                android:layout_toEndOf="@id/fabTripFeeds"
                android:layout_alignParentTop="true"
                android:background="@drawable/floating_action_button_label"
                android:gravity="center"
                android:elevation="7dp"
                android:text="99+"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/ic_baseline_add_24"
                app:fabSize="normal"
                android:tint="@color/white"
                app:rippleColor="@color/white" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout >
</layout>