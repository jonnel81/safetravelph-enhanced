<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".Trip">

        <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:layout_marginTop="?attr/actionBarSize"
            android:id="@+id/drawer_layout">

            <include
                layout="@layout/content_trip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:itemTextColor="@color/blue"
                android:fitsSystemWindows="false"
                app:menu="@menu/navigation_menu"
                app:headerLayout="@layout/navigation_header" />
        </androidx.drawerlayout.widget.DrawerLayout>

        <com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarTrip"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/blue"
                app:title="@string/app_name"
                app:titleTextAppearance="@style/ActionBarTextAppearance"
                app:theme="@style/ToolBarStyle"
                android:background="?attr/colorPrimary">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical|end|end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_directions_24"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_notifications_black_24dp"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical|end|end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripFeeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/ic_baseline_message_24"
                android:tint="@color/blue"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@color/white" />

            <TextView
                android:id="@+id/txtFeedsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-85dp"
                android:layout_toEndOf="@id/fabTripFeeds"
                android:background="@drawable/floating_action_button_label"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:elevation="7dp"
                android:text="99"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal" />
        </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTripAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/ic_baseline_add_24"
                app:fabSize="normal"
                android:tint="@color/white"
                app:rippleColor="@color/white" />
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="bottom"
            app:itemTextAppearanceActive="@style/BottomNavigation.ActiveItemTextAppearance"
            app:itemTextAppearanceInactive="@style/BottomNavigation.InactiveItemTextAppearance"
            android:background="?android:attr/windowBackground"
            app:labelVisibilityMode="labeled"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@color/blue"
            app:itemTextColor="@color/blue"
            app:menu="@menu/bottom_nav_menu"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout >
</layout>