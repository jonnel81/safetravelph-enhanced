<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:itemBackground">@color/blue</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/blue</item>
    </style>

    <style name="ActionBarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#0038A8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gothambold_font</item>
    </style>

    <style name="popupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/gothambook_font</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gothammedium_font</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gothamlight_font</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NavigationDrawerStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gothammedium_font</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/gothammedium_font</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/gothammedium_font</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:fontFamily">@font/gothammedium_font</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:popupBackground">@color/blue</item>
        <item name="android:itemBackground">@color/blue</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:popupTheme">@style/popupTheme</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:fontFamily">@font/gothammedium_font</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
